@model LightsAndBites.ViewModels.UserProfileCreateViewModel


@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>UserProfile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserProfile.Email" class="control-label"></label>
                <input asp-for="UserProfile.Email" class="form-control" />
                <span asp-validation-for="UserProfile.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserProfile.FirstName" class="control-label"></label>
                <input asp-for="UserProfile.FirstName" class="form-control" />
                <span asp-validation-for="UserProfile.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserProfile.LastName" class="control-label"></label>
                <input asp-for="UserProfile.LastName" class="form-control" />
                <span asp-validation-for="UserProfile.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserProfile.Hometown" class="control-label"></label>
                <input asp-for="UserProfile.Hometown" class="form-control" />
                <span asp-validation-for="UserProfile.Hometown" class="text-danger"></span>
            </div>

            <div>
                <label class="control-label">Select First Bar Category</label>
                @Html.DropDownListFor(m => m.UserProfile.BarCategoryIdOne, Model.BarCategoryList, "First Category")


                <label class="control-label">Select Second Bar Category</label>
                @Html.DropDownListFor(m => m.UserProfile.BarCategoryIdTwo, Model.BarCategoryList, "Second Category")
            </div>
            <div>
                <label class="control-label">Events One</label>
                @Html.DropDownListFor(m => m.UserProfile.EventCategoryIdOne, Model.EventsCategoryList, "First Events Category")

                <label class="control-label">Events Two</label>
                @Html.DropDownListFor(m => m.UserProfile.EventCategoryIdTwo, Model.EventsCategoryList, "Second Events Category")

                <label class="control-label">Events Three</label>
                @Html.DropDownListFor(m => m.UserProfile.EventCategoryIdThree, Model.EventsCategoryList, "Third Events Category")
            </div>

            <div>
                <label class="control-label">Restaurants One</label>
                @Html.DropDownListFor(m => m.UserProfile.RestaurantCategoryIdOne, Model.RestaurantCategoryList, "First Restaurant Category")

                <label class="control-label">Events Two</label>
                @Html.DropDownListFor(m => m.UserProfile.RestaurantCategoryIdTwo, Model.RestaurantCategoryList, "Second Restaurant Category")

                <label class="control-label">Events Three</label>
                @Html.DropDownListFor(m => m.UserProfile.RestaurantCategoryIdThree, Model.RestaurantCategoryList, "Third Restaurant Category")
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
